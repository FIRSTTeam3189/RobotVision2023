{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
    {
        "label": "build",
        "command": "cargo",
        "args": [
            "build",  
            "--release",
            "--features=gui"
        ],
        "group": "build",
    },
    {
        "label": "run",
        "command": "./target/release/webcam.exe",
        "group": "build"
    },
    {
        "label": "calibration",
        "command": "cargo",
        "args": [
            "run",
            "--release",
            "--features=gui,save-pix"
        ],
        "group": "build"
    },
    {
        "label": "cal-script",
        "command": "py",
        "args": [
            "get-calibration-params.py"
        ],
        "group": "build"
    }
    ]
  }